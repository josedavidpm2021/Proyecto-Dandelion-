<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp"
    android:paddingHorizontal="16dp"
    android:layout_marginBottom="20dp"
    android:outlineSpotShadowColor="@color/md_theme_light_primary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView_toggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
        android:tint="@color/black"
        android:layout_width="36dp"
        android:layout_height="36dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_status"
        android:text="@string/shipping_searching"
        app:layout_constrainedWidth="true"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintStart_toEndOf="@id/imageView_toggle"
        app:layout_constraintTop_toTopOf="@id/imageView_toggle"
        app:layout_constraintBottom_toBottomOf="@id/imageView_toggle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>